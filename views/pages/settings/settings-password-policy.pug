extends ../../layouts/_layout

block variables
  - var activePage = 'settings';

block content
  .app-title
    div
      h1
        i.fa.fa-cog
        | Settings

    
    ul.app-breadcrumb.breadcrumb.side
      li.breadcrumb-item
        a(href="/dashboard")
          i.fa.fa-home.fa-lg
      li.breadcrumb-item
        | Settings

  .row
    .col-md-12
      .tile
        .overlay#settingsPasswordPolicyLoading
          .m-loader.mr-4
            svg.m-circular(viewbox='25 25 50 50')
              circle.path(cx='50' cy='50' r='20' fill='none' stroke-width='4' stroke-miterlimit='10')
          h3.l-text Loading 
        .tile-body
          .row
            .col-md-3
              include ../../includes/settings-menu

            .col-md-9
              h2 Password Policy

              
              .form-group
                label(for='passwordLength') Minimum password length
                input#passwordLength.form-control(type='number', placeholder='DEFAULT: 6')

              //- .form-group
              //-   label.control-label Password expires in
              //-   .form-group
              //-     label.sr-only(for='exampleInputAmount') 
              //-     .input-group
              //-       input#exampleInputAmount.form-control(type='number', placeholder='DEFAULT: disabled')
              //-       .input-group-append
              //-         span.input-group-text Days

              //- .form-group
              //-   label.control-label Enforce password history
              //-   .form-group
              //-     label.sr-only(for='exampleInputAmount') 
              //-     .input-group
              //-       input#exampleInputAmount.form-control(type='number', placeholder='DEFAULT: 10')
              //-       .input-group-append
              //-         span.input-group-text Passwords remembered

              
              .form-check
                label.form-check-label
                  input#shouldHaveUppercaseLetter.form-check-input(type='checkbox')
                  | Require at least one uppercase letter
              .form-check
                label.form-check-label
                  input#shouldHaveLowercaseLetter.form-check-input(type='checkbox')
                  | Require at least one lowercase letter
              .form-check
                label.form-check-label
                  input#shouldHaveNumber.form-check-input(type='checkbox')
                  | Require at least one number
              .form-check
                label.form-check-label
                  input#shouldHaveSymbol.form-check-input(type='checkbox')
                  | Require at least one symbol character

              br

              button.btn.btn-primary(type='button' onclick="app.settings.passwordPolicy.save()") Save

              //- button.btn.btn-primary(type='button') Save
              
              
