extends ../../layouts/_layout

block variables
  - var activePage = 'settings';

block content
  .app-title
    div
      h1
        i.fa.fa-cog
        | Settings

    
    ul.app-breadcrumb.breadcrumb.side
      li.breadcrumb-item
        a(href="/dashboard")
          i.fa.fa-home.fa-lg
      li.breadcrumb-item
        | Settings

  .row
    .col-md-12
      .tile
        .overlay#settingsNewUsers
          .m-loader.mr-4
            svg.m-circular(viewbox='25 25 50 50')
              circle.path(cx='50' cy='50' r='20' fill='none' stroke-width='4' stroke-miterlimit='10')
          h3.l-text Loading
        .row
          .col-md-3
            include ../../includes/settings-menu

          .col-md-9
            h2 New Users

            ul.list-group
              li.list-group-item 
                .form-check
                  label.form-check-label
                    input.form-check-input(type='radio' name="newUsersType" value="ANYONE")
                    | Anyone
                p.text-danger WARNING: NOT SECURE IN PRODUCTION
              li.list-group-item 
                .form-check
                  label.form-check-label
                    input.form-check-input(type='radio' name="newUsersType" value="REQUEST")
                    | Request
              li.list-group-item 
                .form-check
                  label.form-check-label
                    input.form-check-input(type='radio' name="newUsersType" value="MANUAL")
                    | Manual
            
            button.btn.btn-primary.mt-3(type='button' onclick="app.settings.newUsers.save()") Save

block specific-js
  script.
    app.settings = {};
    app.settings.newUsers = {};
    app.settings.newUsers.data = {};
  script(type='text/javascript', src='/js/views/pages/settings/settings-new-users.js')
